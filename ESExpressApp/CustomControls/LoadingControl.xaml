<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
             x:Name="this" 
             x:Class="ESExpressApp.CustomControls.LoadingControl">
   <StackLayout VerticalOptions="Center"
             HorizontalOptions="Center"
             BackgroundColor="Transparent">
    <ActivityIndicator Color="{StaticResource Primary}" IsRunning="True" IsVisible="true" />
    <Label Text="{localization:Translate ls_Loading,StringFormat='{0}...'}" TextColor="White" HorizontalOptions="Center" />
</StackLayout>
</Grid>
