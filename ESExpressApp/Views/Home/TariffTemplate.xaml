<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:models="clr-namespace:ESExpressApp.Models"
              HeightRequest="67"
              RowSpacing="0"
             ColumnDefinitions="40,*"
             Padding="2,0,2,4"
             x:DataType="models:TariffModel"
              x:Class="ESExpressApp.Views.Home.TariffTemplate">
             <Frame Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="#EBF2F8" BorderColor="Transparent" />
              <Label
                                Grid.Column="0"
                                HorizontalOptions="Center" 
                                VerticalOptions="Center"  
                                Text="{Binding IconUnicode}" 
                                TextColor="#4BBC28" 
                                FontFamily="{Binding IconFontFamily}" 
                                FontAttributes="Bold" 
                                FontSize="24" />
              <Label Grid.Column="1" Text="{Binding Title}" LineBreakMode="WordWrap" VerticalOptions="Center" FontSize="14" MaxLines="2" TextColor="Black" />
</Grid>
